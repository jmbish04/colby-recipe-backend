{
  "name": "colby-recipe-backend",
  "version": "1.1.0",
  "description": "MenuForge AI recipe backend (Cloudflare Workers)",
  "main": "src/worker.ts",
  "scripts": {
    "pretypecheck": "wrangler types --experimental-include-runtime",
    "typecheck": "npm run pretypecheck && tsc --noEmit",
    "test": "vitest run",
    "dev": "wrangler dev",
    "migrate:remote": "wrangler d1 migrations apply DB --remote",
    "deploy": "npm run migrate:remote && wrangler versions deploy"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "recipes",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.7.2",
    "vitest": "^2.1.3",
    "wrangler": "^4.42.0"
  },
  "dependencies": {
    "hono": "^4.9.9"
  }
}
